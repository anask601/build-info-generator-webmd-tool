{
  "manifest_version": 3,
  "name": "Build Information Generator",
  "version": "1.0.0",
  "description": "Generate standardized build information for internal reviews",
  "permissions": ["storage", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Build Info Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
